{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "files": {
    "includes": ["src/**/*", "*.{ts,tsx,js,jsx}"]
  },
  "overrides": [
    {
      "includes": ["src/components/features/file/FileUpload.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off",
            "noNoninteractiveElementToInteractiveRole": "off"
          }
        }
      }
    }
  ]
}
