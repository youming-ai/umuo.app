{
  "name": "umuo-app",
  "version": "1.0.0",
  "description": "A language learning application focused on shadowing practice with AI-powered audio transcription",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "lint": "biome check .",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "ci:build": "pnpm install --frozen-lockfile && pnpm lint && pnpm type-check && pnpm test:run && pnpm build",
    "clean": "rm -rf .next node_modules/.cache"
  },
  "keywords": [
    "language-learning",
    "transcription",
    "audio",
    "ai",
    "education"
  ],
  "author": "umuo.app Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
