{
  "name": "umuo-app",
  "version": "1.0.0",
  "description": "A language learning application focused on shadowing practice with AI-powered audio transcription",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "biome check .",
    "format": "biome format . --write",
    "type-check": "tsc --noEmit",
    "test:security": "pnpm audit --audit-level high",
    "test:performance": "lighthouse https://umuo.app --output html --output-path ./lighthouse-report.html",
    "cf:login": "npx wrangler login",
    "cf:deploy:prod": "npx wrangler pages deploy .next --project-name umuo-app",
    "cf:deploy:preview": "npx wrangler pages deploy .next --project-name umuo-app --preview",
    "deploy": "./scripts/deploy-optimized.sh",
    "deploy:preview": "./scripts/deploy-optimized.sh --no-env",
    "deploy:quick": "./scripts/deploy-optimized.sh --no-clean",
    "deploy:build": "./scripts/deploy-optimized.sh --no-deploy",
    "ci:build": "pnpm install --frozen-lockfile && pnpm test:security && pnpm lint && pnpm type-check && pnpm build",
    "clean": "rm -rf .next node_modules/.cache",
    "prepare": "husky"
  },
  "keywords": [
    "language-learning",
    "transcription",
    "audio",
    "ai",
    "education"
  ],
  "author": "umuo.app Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.24",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "ai": "^5.0.78",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "lucide-react": "^0.543.0",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.9.2",
    "zod": "^4.1.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "24.9.1",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "3.4.0",
    "wrangler": "^4.43.0"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
